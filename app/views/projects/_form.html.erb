<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <h3><%= pluralize(@project.errors.count, "error") %> prevented this project from being saved: </h3>
    <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %> <br>
  <%= f.text_field :title, placeholder: 'Title' %>
  <br><br>
  <%= f.label :link %> <br>
  <%= f.text_field :link, placeholder: 'Project URL' %>
  <br><br>
  <%= f.label :description %> <br>
  <%= f.text_area :description, placeholder: 'Your project\'s description goes here' %>
  <br><br>
  <%= f.submit %>
<% end %>
<br>
<%= link_to 'Cancel', projects_path %>