<div id="post-show-content" class="skinny-wrapper wrapper-padding">
  <header>
    <p class="date"><%= @project.created_at.strftime('%A, %d %b %Y') %></p>
    <h1><%= @project.title %></h1>
    <hr>
  </header>

  <div id="content">
    <%= markdown @project.description %><br>
    <div class="button-wrapper">
      <a href="<%= @project.link %>" class="project-button" target="_blank">Visit <%= @project.title %></a>
    </div>
    <br><br>
  </div>
  <% if user_signed_in? %>
    <div id="admin-links">
      <%= link_to 'Edit', edit_project_path(@project) %> |
      <%= link_to 'Delete', project_path(@project), method: :delete, data: { confirm: 'Are you sure?'} %>
    </div>
    <br><br>
  <% end %>
    <%= link_to 'Back', root_path %>
    <hr>
</div>